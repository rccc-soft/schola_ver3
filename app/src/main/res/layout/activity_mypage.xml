<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFD4E0"
    tools:context=".MainActivity">

    <!-- ImageView -->
    <ImageView
        android:id="@+id/mybackbtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:srcCompat="@drawable/backbutton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/mybackbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="名前を表示"
            android:textColor="#79747E"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Star TextViews -->
        <TextView
            android:id="@+id/mystar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☆"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView" />

        <TextView
            android:id="@+id/mystar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☆"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/mystar1"
            app:layout_constraintTop_toTopOf="@id/mystar1" />

        <TextView
            android:id="@+id/mystar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☆"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/mystar2"
            app:layout_constraintTop_toTopOf="@id/mystar2" />

        <TextView
            android:id="@+id/mystar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☆"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/mystar3"
            app:layout_constraintTop_toTopOf="@id/mystar3" />

        <TextView
            android:id="@+id/mystar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☆"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/mystar4"
            app:layout_constraintTop_toTopOf="@id/mystar4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 上部のConstraintLayout2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout"> <!-- 変更ここ -->

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="96dp"
            android:text="￥"
            android:textColor="#79747E"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            android:textColor="#79747E"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/textView7"
            app:layout_constraintTop_toTopOf="@id/textView7" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="12dp"
            android:text="売上金"
            android:textColor="#79747E"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/myexlistlistbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="出品一覧"
                android:textColor="#79747E"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mybuylistlistbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="購入一覧"
                android:textColor="#79747E"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/myfavolistbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="お気に入り"
                android:textColor="#79747E"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mysaleslistbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="売上金振込"
                android:textColor="#79747E"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mycuslistbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="カスタマーサービス"
                android:textColor="#79747E"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/myoutlistbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="ログアウト"
                android:textColor="#79747E"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mysettinglistbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="設定"
                android:textColor="#79747E"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/chatunderbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/mypage_homebtn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/home_button"/>

        <ImageView
            android:id="@+id/mypage_searchbtn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/search_button" />

        <ImageView
            android:id="@+id/mypage_exhibitbtn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/exhibit_button" />

        <ImageView
            android:id="@+id/mypage_favobtn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/favorite_button" />

        <ImageView
            android:id="@+id/mypage_mypagebtn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/mypage_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
