<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Rule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            app:srcCompat="@drawable/logindot"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            app:srcCompat="@drawable/logowhite" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:fontFamily="sans-serif"
            android:text="ユーザ名"
            android:textColor="#79747E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="13"
            android:inputType="text"
            android:textColor="#79747E" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="20dp"
            android:text="パスワード"
            android:textColor="#79747E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="13"
            android:inputType="textPassword"
            android:textColor="#79747E" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#79747E"
            android:text="ログイン"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--            android:backgroundTint="#AC9ED2"-->

        <Button
            android:id="@+id/button_sinkikaiintouroku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:text="新規会員登録"
            android:textColor="#65558F"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!--            android:textColor="#AC9ED2"-->

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="-35dp"
            android:text="アカウントをお持ちでない場合は"
            android:textColor="#79747E"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_haisougyousya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="90dp"
            android:backgroundTint="#FFFFFF"
            android:text="こちら"
            android:textColor="#65558F"
            android:textSize="15sp"
            android:textStyle="bold" />
        <!--            android:layout_marginStart="200dp"-->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="-35dp"
            android:text="配送業者の方は"
            android:textColor="#79747E"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.50"
                app:srcCompat="@drawable/widgetback" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/rectangle" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-250dp"
            android:text="利用規約"
            android:textColor="#79747E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp">

            <TextView
                android:id="@+id/ruleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="start"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:text="本利用規約"
                android:textColor="#000000"
                android:textSize="14sp"
                android:ellipsize="none" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/noButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="200dp"
                android:backgroundTint="#79747E"
                android:onClick="deleteTable"
                android:text="キャンセル"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/yesButton"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="200dp"
                android:backgroundTint="#79747E"
                android:text="同意"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>