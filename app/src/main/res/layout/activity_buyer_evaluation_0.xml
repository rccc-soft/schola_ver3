<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF4FF"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:background="#FFFFFF"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/backbutton" />


    <TextView
        android:id="@+id/evaluationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="購入者評価"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/evaluationButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:weightSum="5">


        <Button
            android:id="@+id/veryGoodButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#4CAF50"
            android:text="感動"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />


        <Button
            android:id="@+id/goodButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#8BC34A"
            android:text="良い"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />


        <Button
            android:id="@+id/normalButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#FFC107"
            android:text="普通"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/badButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#FF9800"
            android:text="悪い"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/veryBadButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:backgroundTint="#F44336"
            android:text="最悪"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>


    <EditText
        android:id="@+id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:hint="出品者へのメッセージ"
        android:background="@drawable/rounded_rectangle_background"
        android:padding="16dp"
        android:gravity="top|start"
        android:layout_marginTop="32dp" />


    <Button
        android:id="@+id/editButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#79747E"
        android:text="送信"
        android:textColor="#FFFFFF" />
</LinearLayout>
